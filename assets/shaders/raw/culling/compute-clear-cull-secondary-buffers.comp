#version 460

layout(local_size_x = 1) in;

@dynamic
layout(set = 0, binding = 0) writeonly buffer visible_uncompacted_meshlets {
    uint count;
} u_visible_uncompacted_meshlets;

@dynamic
layout(set = 0, binding = 1) writeonly buffer visible_meshlets {
    uint count;
} u_visible_meshlets;

layout(push_constant) uniform push_constants {
    uint u_index;
};

void main() {
    if (u_index == 0) {
        u_visible_meshlets.count = 0;
    }
    else if (u_index == 1) {
        u_visible_uncompacted_meshlets.count = 0;
    } 
    else {
        u_visible_uncompacted_meshlets.count = 0;
        u_visible_meshlets.count = 0;
    }
}