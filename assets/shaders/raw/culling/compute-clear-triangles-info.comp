#version 460

layout(local_size_x = 64) in;

layout(std430, set = 0, binding = 9) buffer triangles_buffer {
    uint infos[];
} u_triangles_buffer;


layout(push_constant) uniform push_constants {
    uint u_count;
};

void main() {
    uint id = gl_GlobalInvocationID.x;
    if (id >= u_count)
        return;
    
    u_triangles_buffer.infos[id] = 0;
}